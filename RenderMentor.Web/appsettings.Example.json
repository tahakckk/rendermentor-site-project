{
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_SERVER};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Email": {
    "Host": "${SMTP_HOST}",
    "Port": "${SMTP_PORT}",
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "EnableSSL": true,
    "FromAddress": "${EMAIL_FROM}",
    "SupportAddress": "${EMAIL_SUPPORT}"
  },
  "PaymentGateway": {
    "TerminalUserId": "${PAYMENT_TERMINAL_USER_ID}",
    "TerminalId": "${PAYMENT_TERMINAL_ID}",
    "TerminalMerchantId": "${PAYMENT_MERCHANT_ID}",
    "TerminalProvUserId": "${PAYMENT_PROV_USER_ID}",
    "TerminalProvPassword": "${PAYMENT_PROV_PASSWORD}",
    "StoreKey": "${PAYMENT_STORE_KEY}",
    "Mode": "${PAYMENT_MODE}",
    "GatewayUrl": "${PAYMENT_GATEWAY_URL}",
    "VerifyUrl": "${PAYMENT_VERIFY_URL}"
  },
  "Security": {
    "EncryptionKey": "${ENCRYPTION_KEY}",
    "JwtSecret": "${JWT_SECRET}",
    "TokenExpirationMinutes": 60
  }
} 