@model RenderMentor.Models.ViewModels.ShoppingCartVM
@{
    ViewData["Title"] = "Ödeme Tamamlandı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="py-5 bg-light-v2">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2>Ödeme Tamamlandı</h2>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb justify-content-md-end bg-transparent">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Anasayfa</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="CourseList" asp-action="Index"> Kurslar</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Cart" asp-action="Index"> Sepet</a>
                    </li>
                    <li class="breadcrumb-item">
                        Ödeme Tamamlandı
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="padding-y-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2><i class="fas fa-check-circle text-success mr-1"></i> Ödeme Başarılı</h2>
                <h4 class="my-4">Siparişiniz için teşekkürler!</h4>
                <p>
                    Sayın @(Model.OrderHeader.Name), toplam @(Model.TotalAmount) TL'lık siparişiniz işleme alınmıştır ve en kısa zamanda tamamlanacaktır.
                    Kısa bir süre sonra siparişinizle ilgili e-posta yoluyla bilgilendirileceksiniz. <br>
                    Sipariş numaranız : <strong>@Model.OrderNumber</strong>
                </p>
                <a asp-controller="CourseList" asp-action="Index" class="btn btn-primary mt-4">Kurslara Dön</a>
            </div>
        </div> <!-- END row-->
    </div> <!-- END container-->
</section>

