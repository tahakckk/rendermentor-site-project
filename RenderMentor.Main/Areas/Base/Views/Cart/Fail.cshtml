@model RenderMentor.Utility.VerifyGatewayResult
@using Newtonsoft.Json
@{
    ViewData["Title"] = "Ödeme Başarısız";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fa fa-times-circle text-danger fa-4x"></i>
                    </div>
                    <h3 class="card-title mb-3">Ödeme İşlemi Başarısız</h3>
                    
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @Model.ErrorMessage
                        </div>
                    }
                    
                    <p>Ödeme işleminiz tamamlanamadı. Lütfen aşağıdaki seçeneklerden birini deneyin:</p>
                    
                    <div class="mt-4">
                        <a href="/sepet" class="btn btn-primary mr-2">Sepete Dön</a>
                        <a href="/odeme" class="btn btn-success">Tekrar Dene</a>
                    </div>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.OrderNumber))
            {
                <div class="mt-3 text-center">
                    <small class="text-muted">Sipariş Numarası: @Model.OrderNumber</small>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Ana sayfaya bilgiler gönderilmiyor artık, çünkü JavaScript hatası oluşturuyordu
    console.log("Ödeme işlemi başarısız oldu");
</script>
