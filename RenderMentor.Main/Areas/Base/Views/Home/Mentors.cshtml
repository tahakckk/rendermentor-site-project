@model MentorPage

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var setBg = "/images/breadcrumb-bg.jpg";
    if (Model.PageBg != null)
    {
        setBg = Model.PageBg;
        setBg = setBg.Replace("\\", "/");
    }
}

<div class="py-5 bg-cover" data-dark-overlay="6" style="background:url(@setBg) no-repeat">
    <div class="container">
        <h1 class="text-white">
            Mentorlar
        </h1>
        <ol class="breadcrumb breadcrumb-double-angle text-white bg-transparent p-0">
            <li class="breadcrumb-item"><a asp-action="Index">Anasayfa</a></li>
            <li class="breadcrumb-item">Mentorlar</li>
        </ol>
    </div>
</div>

@if (Model.PageTitle != null || Model.PageDesc != null)
{
<section class="padding-y-100 border-bottom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <h2 class="title-styled">@Model.PageTitle</h2>
                <div class="width-4rem height-4 bg-primary rounded mt-4 marginBottom-40"></div>
                <div class="about-content">
                    @Html.Raw(Model.PageDesc)
                </div>
            </div> <!-- END col-lg-6 ml-auto-->
        </div> <!-- END row-->
    </div> <!-- END container-->
</section>
}

@await Component.InvokeAsync("Mentors")



