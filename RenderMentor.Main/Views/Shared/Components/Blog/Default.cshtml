@model IEnumerable<RenderMentor.Models.ViewModels.BlogListVM>
@{
    Layout = null;
}

@if (Model.Count() > 0)
{
    <div class="widget">
        <h2 class="widget-title">
            Son Bloglar
        </h2>
        @foreach (var blog in Model.Take(4))
        {
        <div class="mb-4">
            <a asp-area="Base" asp-controller="Blog" asp-action="Details" asp-route-SEOUrl="@blog.SEOUrl">
                <img src="@blog.ThumbnailSM" alt="@blog.Title">
            </a>
            <h2 class="font-size-16 mt-2">
                <a asp-area="Base" asp-controller="Blog" asp-action="Details" asp-route-SEOUrl="@blog.SEOUrl">@blog.Title</a>
            </h2>
        </div>
        }
    </div> <!-- END widget-->
}

