@using System.Globalization
@model IEnumerable<RenderMentor.Models.Reference>
@{
    Layout = null;
    string refName = "";
}

@if (Model.Count() > 0)
{
    <section class="padding-y-100 bg-black-0_9">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 text-center text-white mb-md-5">
                    <h2 class="mb-4">
                        Referanslarımız
                    </h2>
                    <div class="width-3rem height-4 rounded bg-white mx-auto"></div>
                </div>
                @foreach (var reference in Model)
                {
                <div class="col-md-4">
                    @{ 
                        refName = CultureInfo.CurrentCulture.TextInfo.ToTitleCase(reference.Logo.Replace(@"\images\references\", "").Replace(".png", "").Replace(".jpg", ""));
                        refName = refName.Replace("-", " ");
                    }
                    <div class="reference-box"><img src="@reference.Logo" alt="@refName" title="@refName"></div>
                </div>
                }
            </div>
        </div>
    </section>
}
