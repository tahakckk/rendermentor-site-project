@model IEnumerable<RenderMentor.Models.CourseCategory>

@{
    Layout = null;
}

@if (Model.Count() > 0)
{
<section class="bg-light-v2 paddingTop-80 paddingBottom-100">
    <div class="container">
        <div class="row text-center">
            <div class="col-12 text-center mb-md-4">
                <h2 class="mb-4">
                    Kurs Kategorileri
                </h2>
                <div class="width-3rem height-4 rounded bg-dark mx-auto"></div>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 marginTop-30">
                    <a asp-area="Base" asp-controller="CourseList" asp-action="Index" asp-route-courseCategory="@item.SEOUrl" class="card height-100p shadow-v1 align-items-center p-5 hover:transformTop">
                        <img src="@item.CoverImage" alt="@item.Name">
                        <h4 class="mt-2">@item.Name</h4>
                    </a>
                </div>
            }
        </div> <!-- END row-->
    </div> <!-- END container-->
</section>   <!-- END section-->
}