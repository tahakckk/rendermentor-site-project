@model IEnumerable<RenderMentor.Models.Social>
@{
    Layout = null;
    string iconName = "";
    string title = "";
}

@if (Model.Count() > 0)
{
    <ul class="list-inline">
        @foreach (var social in Model)
        {
            switch (social.Name)
            {
                case Social.Socials.Facebook:
                    title = "Facebook";
                    iconName = "facebook-f";
                    break;
                case Social.Socials.Instagram:
                    title = "Instagram";
                    iconName = "instagram";
                    break;
                case Social.Socials.Twitter:
                    title = "Twitter";
                    iconName = "twitter";
                    break;
                case Social.Socials.Linkedin:
                    title = "Linkedin";
                    iconName = "linkedin";
                    break;
                case Social.Socials.Youtube:
                    title = "Youtube";
                    iconName = "youtube";
                    break;
                case Social.Socials.Vimeo:
                    title = "Vimeo";
                    iconName = "vimeo";
                    break;
                default:
                    break;
            }            
            <li class="list-inline-item"><a class="iconbox bg-white-0_2 hover:primary" href="@social.Link" target="_blank" title="@title"><i class="fab fa-@iconName"> </i></a></li>
        }
    </ul>
}
